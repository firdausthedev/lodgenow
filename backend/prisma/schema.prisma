// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id        String       @id @default(uuid())
  name      String
  location  String
  price     Float
  bedrooms  Int
  bathrooms Int
  photos    String[]
  type      PropertyType

  agent    Agent     @relation(fields: [agentId], references: [id])
  agentId  String
  reviews  Review[]
  bookings Booking[]
}

enum PropertyType {
  CITY
  RURAL
  MOUNTAIN
  TROPICAL
}

model Agent {
  id         String     @id @default(uuid())
  name       String
  email      String     @unique
  photo      String
  properties Property[]
}

model User {
  id       String    @id @default(uuid())
  username String    @unique
  password String
  bookings Booking[]
  Review   Review[]
}

model Review {
  id         String   @id @default(uuid())
  rating     Int
  comment    String?
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}

model Booking {
  id         String   @id @default(uuid())
  checkIn    DateTime
  checkOut   DateTime
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  payment    Payment?
}

model Payment {
  id        String        @id @default(uuid())
  amount    Float
  status    PaymentStatus
  booking   Booking       @relation(fields: [bookingId], references: [id])
  bookingId String        @unique
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

model Admin {
  id       String @id @default(uuid())
  username String @unique
  password String
}
